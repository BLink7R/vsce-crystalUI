{
	"name": "crystalui",
	"displayName": "crystal UI",
	"description": "To make your vscode more attractive",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.openCrystalUI",
		"onCommand:extension.clsCrystalUI"
	],
	"main": "./js/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.openCrystalUI",
				"title": "Open crystal UI(the dawn)"
			},
			{
				"command": "extension.clsCrystalUI",
				"title": "Close crystal UI(the dawn)"
			}
		],
		"themes": [
			{
				"label": "crystal ui",
				"uiTheme": "vs-dark",
				"path": "./json/crystal-out.json"
			}
		],
		"configuration": {
			"title": "Plugin crystalUI configuration",
			"type": "object",
			"properties": {
				"crystalUI.foreground": {
					"type":"boolean",
					"default": false,
					"description": "Whether the picture is put above your editor and terminal.If true,the configuration \"listsOpacity\" won't work"
				},
				"crystalUI.backpicPath": {
					"type": "string",
					"default": null,
					"description": "Absolute path of the background,default if set to null."
				},
				"crystalUI.opacity": {
					"type": "number",
					"default": 0.7,
					"description": "The opacity of vscode's window in crystal mode.Need a value between 0 and 1."
				},
				"crystalUI.listsOpacity": {
					"type": "number",
					"default": 0.3,
					"description": "The opacity of lists' background when mouseon or mousefocus.Need a value between 0 and 1."
				}
			}
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"eslint": "^4.11.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}